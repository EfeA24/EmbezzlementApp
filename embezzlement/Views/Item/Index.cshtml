@using Entites.Models;
@model IEnumerable<Item>

<h2>Item List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Stock Code</th>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemStockCode</td>
                <td>@item.ItemName</td>
                <td>@item.ItemDescription</td>
                <td>@item.ItemType</td>
                <td>@item.ItemCount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ItemId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Item</a>
