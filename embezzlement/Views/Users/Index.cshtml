@using IdentityApp.Models
@using Microsoft.AspNetCore.Identity
@model IEnumerable<AppUser>

<a class="btn btn-primary" asp-action="Create">Create User</a>
<table class="table table-sm table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Full Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                    
                    <form asp-action="delete" method="post" onsubmit="return confirm('Are you sure you want to delete this user?')" style="display: inline-block;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>

                </td>            
            </tr>
        }
    </tbody>
</table>